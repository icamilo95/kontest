<%= render "layouts/menu" %>

<div class="container-fluid">
   <div class="col-sm-9">
         <div class="panel panel-default">
            <div class="panel-heading">
               <h2 class="panel-title text-left"><%= @client.name %> 
                  <%= link_to "Editar Cliente", edit_client_path(@client) , :class => "btn btn-default" %>
                  <%= link_to "Nuevo Kontest", new_client_kontest_path(@client) , :class => "btn btn-default" %> 
                  <%= link_to "Indice de clientes", clients_path , :class => "btn btn-default" %>
               </h2>   
            </div>
            <div class="panel-body">
               <div class="row">
                  <div class="col-sm-6">                     
                     <table class="table table-bordered">
                        <tr><th scope="row">Email:</th><td><%= @client.email %></td></tr>
                        <tr><th scope="row">Contacto:</th><td><%= @client.contacto   %> </td></tr>
                        <tr><th scope="row">Celular:</th><td><%= @client.celular   %> </td></tr>
                        <tr><th scope="row">Telefono:</th><td><%= @client.telefono   %> </td></tr>
                        <tr><th scope="row">Comentarios:</th><td><%= @client.comentarios   %> </td></tr>
                     </table>
                  </div> 
                  <div class="col-sm-6">                     
                     <table class="table table-bordered">
                        <tr><th scope="row">Direccion:</th><td><%= @client.direccion   %> </td></tr>
                        <tr><th scope="row">Pais:</th><td><%= @client.pais   %> </td></tr>
                        <tr><th scope="row">Ciudad:</th><td><%= @client.ciudad   %> </td></tr>
                        <tr><th scope="row">Logo:</th><td><%= @client.logo   %> </td></tr>
                     </table>
                  </div>
               </div>               
               
               
               <div class="row">              
                  <div class="col-sm-12"> 
                     <div class="panel panel-default">
                        <div class="panel-heading">Kontests</div>
                           <table class="table table-bordered">
                              <tr>
                                 <th>Id</th>
                                 <th>Codigo</th>
                                 <th>Premio</th>
                                 <th>Fecha Inicio</th>
                                 <th>Fecha Fin</th>
                                 <th>Ganadores Disponibles</th>
                                 <th>Total Codigos</th>
                                 <th>Usuarios Ganadores</th>
                                 <th>Codigos Registrados</th>
                              </tr>
                              <% if @kontests %>
                                 <% total_winner = 0 %>
                                 <% total_registered = 0 %>
                                 <% total_codigos = 0 %>
                                 <% @kontests.each do |kontest| %>     
                                 <!-- Next lines count winners and registered -->
                                    <% kontest.unicodes.each do |unicode| %>
                                          <% if unicode.user_id %>
                                             <% total_registered += 1 %>
                                             <% if unicode.winner %>
                                                <% total_winner += 1 %>
                                             <% end %>
                                          <% end %>
                                          <% total_codigos += 1 %>  
                                       <% end %>
                                 <!-- Below lines count winners and registered -->      
                                    <tr>
                                       <td><%= link_to kontest.id, kontest_path(kontest) %></td>
                                       <td><%= kontest.kontestcode %></td>
                                       <td><%= kontest.award %></td>
                                       <td><%= kontest.startdate.in_time_zone("Eastern Time (US & Canada)") %></td>
                                       <td><%= kontest.enddate.in_time_zone("Eastern Time (US & Canada)") %></td>
                                       <td><%= kontest.amountwinners %></td>
                                       <!-- <td><%= kontest.amountcodes %></td> -->
                                       <td><%= total_codigos %></td>
                                       <td><%= total_winner %></td>
                                       <td><%= total_registered %></td>
                                       <% total_winner = 0 %>
                                       <% total_registered = 0 %>
                                       <% total_codigos = 0 %>
                                    </tr>           
                                 <% end %>
                              <% end %>
                              
                           </table>         
                     </div> <!-- panel-default -->
                  </div> <!-- col-sm-12 -->
               </div>  <!-- row -->    
               
               
                 
                        
               

            </div> <!--Panel-body -->
      </div>  <!--Panel-default -->
   </div> <!-- Col sm 9 -->
      
   <div class="col-sm-3">
         <div class="panel panel-default">
            
                  <table class="table table-bordered">
                     <tr><th scope="row">Rset password enviado el: </th><td><%= @client.reset_password_sent_at   %></td></tr>
                     <tr><th scope="row">Recordatorio de clave el: </th><td><%= @client.remember_created_at   %></td></tr>
                     <tr><th scope="row">Ingresos: </th><td><%= @client.sign_in_count   %></td></tr>
                     <tr><th scope="row">Actual ingreso: </th><td><%= @client.current_sign_in_at   %></td></tr>
                     <tr><th scope="row">Ultimo ingreso:</th><td><%= @client.last_sign_in_at   %></td></tr>
                     <tr><th scope="row">IP: </th><td><%= @client.current_sign_in_ip   %></td></tr>
                     <tr><th scope="row">Ultimo IP: </th><td><%= @client.last_sign_in_ip   %></td></tr>
                     <tr><th scope="row">Creado el: </th><td><%= @client.created_at   %></td></tr>
                     <tr><th scope="row">Modificado el: </th><td><%= @client.updated_at   %> </td></tr>
                  </table>                       
      </div>  <!--Panel-default -->
   </div> <!-- Col sm 9 -->   

   
   
   
   


</div>







