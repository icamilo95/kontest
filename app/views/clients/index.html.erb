<%= render "layouts/menu" %>

<div class="container-fluid">
   

   <div class="col-sm-6">

      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title">Lista de Clientes para el Admin</h3>
         </div>
         <div class="panel-body">
            <%= link_to "Home", "/homeadmin" , :class => "btn btn-default" %>
            <%= link_to "Nuevo Cliente", new_client_path , :class => "btn btn-default" %>
            <table class="table table-bordered">
            <hr>

               <tr>
                  <th>Cliente</th>
                  <th>Contacto</th>
                  <th>Email</th>
                  <th>Celular</th>
               </tr>
               <% @clients.each do |client| %>
               <tr>
                     <td><%= link_to client.name, client_path(client) %></td>
                     <td><%= client.contacto %></td>
                     <td><%= client.email %></td>
                     <td><%= client.celular %> </td>
               </tr>               
               <% end %>
            </table>         

         </div> <!-- Panel-body -->
      </div>   <!-- Panel-default -->
      
   </div>       <!-- Col-sm-6 -->
   

</div>    <!-- Container -->


