<%= render "layouts/menu" %>

<div class="container-fluid">
   

   <div class="col-sm-8">

      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title">Lista de Usuarios para el Admin</h3>
         </div>
         <div class="panel-body">
            <%= link_to "Home", "/homeadmin" , :class => "btn btn-default" %>
            <table class="table table-bordered">
            <hr>

               <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Email</th>
                  <th>Ingresos</th>
                  <th>Genero</th>
                  <th>Edad</th>
               </tr>
               <% @users.each do |user| %>
               <tr>
                     <td><%= link_to user.nombre, admin_user_path(user) %></td>
                     <td><%= user.apellido %></td>
                     <td><%= user.email %></td>
                     <td><%= user.sign_in_count %> </td>
                     <td><%= user.genero %></td>
                     <td><%= user.edad %></td>
               </tr>               
               <% end %>
            </table>         

         </div> <!-- Panel-body -->
      </div>   <!-- Panel-default -->
      
   </div>       <!-- Col-sm-6 -->
   

</div>    <!-- Container -->
