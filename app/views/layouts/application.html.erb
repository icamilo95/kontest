<!DOCTYPE html>
<html>
<head>
  <title>KontestApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  
  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">

</head>
<body>

   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>

   <% if user_signed_in? %>
      <p>Hello, <%= current_user.email %> - <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></p>
   <% end %>

   <% if client_signed_in? %>
      <p>Hello, <%= current_client.email %> - <%= link_to "Sign out", destroy_client_session_path, :method => 'delete' %></p>
   <% end %>

   <% if admin_signed_in? %>
      <p>Hello, <%= current_admin.email %> - <%= link_to "Sign out", destroy_admin_session_path, :method => 'delete' %></p>
   <% end %>

<%= yield %>

</body>
</html>
